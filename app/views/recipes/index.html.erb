<h1>Recipes#index</h1>
<p>Find me in app/views/recipes/index.html.erb</p>

<table>
  <thead>
    <th>Thumbail</th>
    <th>Title</th>
    <th>Rank</th>
  </thead>
  <tbody>
    <% @recipes.each do |recipe| %>
    <tr>
      <td>
        <%= link_to image_tag(recipe["image_url"], size: "100x100", alt: recipe["title"]), recipe["source_url"] %>

      </td>
      <td><%= link_to recipe["title"].html_safe, recipe["source_url"] %>
      </td>
      <td><%= recipe["social_rank"] %></td>
    </tr>
    <% end %>
  </tbody>
</table>
